{
  "manifest_version": 3,
  "name": "AudioKniga.one Downloader",
  "version": "1.2.0",
  "description": "Скачивание аудиокниг с audiokniga.one через popup",
  "permissions": [
    "storage",
    "downloads",
    "cookies",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://audiokniga.one/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://audiokniga.one/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}